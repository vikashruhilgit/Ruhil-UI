{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "lib": [
      "esnext.array",
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "incremental": true,
    "noEmit": false
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.js", "**/*.test.*", "**/*.stories.*"]
}
